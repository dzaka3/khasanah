<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp"
    android:elevation="@dimen/margin_very_small"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:padding="@dimen/margin_layout">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/activity_title_margin">
        <TextView
            android:id="@+id/lbl_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="favorit_transfer_edit_title"
            android:textSize="@dimen/font_title3"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/margin_common"
            android:background="@color/black"
            />
        <TextView
            android:id="@+id/lbl_nama_kontak"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" favorit_transfer_edit_name"/>
        <EditText
            android:id="@+id/data_nama_kontak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/lbl_datail_rek"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" favorit_transfer_edit_detail"/>

        <LinearLayout
            android:layout_marginTop="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbl_nama_bank"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center_vertical"
                android:text=" favorit_transfer_edit_bank"/>
            <TextView
                android:id="@+id/data_nama_bank"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:background="@drawable/input_white_lilac"
                android:backgroundTint="@color/grey_transparent_30"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/card_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lbl_no_rek"
                android:layout_weight="0.3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text=" favorit_transfer_edit_no"/>
            <TextView
                android:id="@+id/data_no_rek"
                android:background="@drawable/input_white_lilac"
                android:backgroundTint="@color/grey_transparent_30"
                android:layout_weight="0.7"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_simpan"
            style="@style/TombolActiveMat"
            android:layout_marginTop="@dimen/activity_title_margin"
            android:layout_marginBottom="@dimen/card_margin"
            android:textSize="@dimen/font_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" favorit_transfer_edit_button" />
    </LinearLayout>
</androidx.cardview.widget.CardView>