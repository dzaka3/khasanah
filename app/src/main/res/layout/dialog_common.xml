<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="32dp"
    android:layout_margin="@dimen/margin_small"
    android:elevation="@dimen/margin_common"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/transparent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/margin_small"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_layout"
            android:scaleType="fitStart"
            android:src="@drawable/ic_bell" />

        <TextView
            android:id="@+id/lbl_title"
            style="@style/header_teks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_layout"
            android:text="Title"
            android:textAllCaps="true"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lbl_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_layout"
            android:layout_marginTop="@dimen/margin_layout"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            style="@style/title_teks"
            android:text="Description"
            android:textColor="@color/grey"
            android:textAlignment="textStart"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbl_desc2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/margin_layout"
            android:layout_marginTop="@dimen/margin_layout"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            style="@style/title_teks"
            android:text="Description"
            android:textColor="@color/colorPrimaryDark"
            android:textAlignment="textStart"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/transparent"
            android:text="_____________________________________________________________"/>

        <Button
            android:id="@+id/btn_okay"
            style="@style/TombolActiveMat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAllCaps="false"
            android:text="@string/common_btn_oke"
            android:layout_margin="@dimen/margin_layout" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
