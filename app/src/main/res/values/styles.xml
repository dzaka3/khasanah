<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/black_gray</item>
        <item name="drawerArrowStyle">@style/DrawerCommon</item>
    </style>

    <style name="DashboardTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ars_blue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/black_gray</item>
        <item name="drawerArrowStyle">@style/DrawerDashboard</item>
    </style>

    <!-- This configures the styles for the title within the Toolbar  -->

    <style name="TollBar.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- THIS is where you can color the arrow! -->
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:padding">@dimen/margin_very_small</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>
    
    <style name="BottomSheetTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="footer_teks" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="background_white" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/bg_round_fill_white</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="background_white_gradient" parent="@android:style/TextAppearance">
        <item name="android:background">@drawable/bg_round_grad_white</item>
